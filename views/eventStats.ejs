<%- include('partials/header.ejs'); -%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3 text-center mt-4">Annual Event Summary</h4>
            <hr class="my-4">
            <table class="table table-hover" id="yearlyDataTable">
                <thead>
                  <tr>
                    <th scope="col" class="col-4 text-center">Year</th>
                    <th scope="col" class="col-4 text-center">Cost</th>
                    <th scope="col" class="col-4 text-center">Amount Raised</th>
                  </tr>
                </thead>
                <tbody>
                  <% stats.forEach(stat => { %>
                  <tr>
                      <td class="col-4 bg-primary text-white text-center"><%= stat.eventyear %></td>
                      <td class="col-4 bg-primary text-white text-center"><%= stat.totaleventcost %></td>
                      <td class="col-4 bg-primary text-white text-center"><%= stat.totalamountraised %></td>
                  </tr>
                  <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs'); -%>
