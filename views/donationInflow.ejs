<div class="container mt-5">
    <!-- Search bar -->
    <form action="/donationInflows/search" method="get" class="mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="search" class="form-control rounded-3" id="searchInput" name="searchTerm" placeholder="Search for a donation inflow">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </div>
    </form>
    <!-- Buttons -->
    <div class="mb-4">
        <button type="button" class="btn btn-secondary me-2">Add Inflow</button>
