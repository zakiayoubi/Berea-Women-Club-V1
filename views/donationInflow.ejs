                <th>Category</th>
                <th>Amount</th>
                <th>Donation Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% inflows.forEach(inflow => { %>
                <tr>
                    <td><%= inflow.donationinflowid %></td>
                    <td><%= inflow.organizationid %></td>
                    <td><%= inflow.category %></td>
                    <td>$<%= parseFloat(inflow.amount).toFixed(2) %></td>
                    <td><%= new Date(inflow.donationdate).toISOString().slice(0, 10) %></td>
