<!-- list of organizations -->
<div class="mx-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Street</th>
          <th scope="col">City</th>
          <th scope="col">State</th>
          <th scope="col">Zipcode</th>
          <th scope="col">Type</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
        <% let counter = 1; %>
        <% organizations.forEach(org => { %>
            <tbody>
                <tr>
                    <th scope="row"><%= counter %></th>
                    <td><a href="/organizations/%= org.organizationid %>"><%= org.organizationid %> <%= org.organizationname %></a></td>
                    <td><%= org.email %></td>
                    <td><%= org.phonenumber %></td>
                    <td><%= org.street %></td>
                    <td><%= org.city %></td>
                    <td><%= org.usstate %></td>  
                    <td><%= org.zipcode %></td>
                    <td><%= org.organizationtype %></td>
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= org.organizationid %>">
                            Delete
                        </button>
                        <!-- Modal per organization -->
                        <div class="modal fade" id="deleteModal<%= org.organizationid %>" tabindex="-1" aria-labelledby="deleteOrganization" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Organization</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                Are you sure you want to delete this organization ?
                                </div>
                                <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <form action="/deleteOrganization/<%= org.organizationid %>" method="POST">
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                </form>
                                </div>
                            </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
            <% counter++; %>
            <% }) %>
            
    </table>
