<%- include('partials/header.ejs'); -%>

<div class="container mt-5">
    <!-- Search bar -->
    <form action="/donationsearch" method="get" class="mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="search" class="form-control rounded-3" id="searchInput" name="searchTerm" placeholder="Search for a donation inflow">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </div>
    </form>
    
    <!-- Buttons -->
    <div class="mb-4">
        <button type="button" class="btn btn-secondary me-2" onclick="location.href='/donationInflows/add'">Add Inflow</button>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Sort By
            </button>
            <ul class="dropdown-menu">
                <li><button class="dropdown-item" type="submit" name="sortby" value="recordName">Record Name</button></li>
                <li><button class="dropdown-item" type="submit" name="sortby" value="category">Category</button></li>
                <li><button class="dropdown-item" type="submit" name="sortby" value="amount">Amount</button></li>
                <li><button class="dropdown-item" type="submit" name="sortby" value="donationDate">Donation Date</button></li>
            </ul>
        </div>
    </div>

    <!-- List of donation inflows -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Record Name</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Donation Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (donationInflows && donationInflows.length) { %>
                <% donationInflows.forEach(inflow => { %>
                    <tr>
                        <td><%= inflow.donationinflowid %></td>
                        <td><%= inflow.recordname %></td>
                        <td><%= inflow.category %></td>
                        <td>$<%= parseFloat(inflow.amount).toFixed(2) %></td>
                        <td><% if (inflow.donationdate && !isNaN(new Date(inflow.donationdate).getTime())) { %>
                            <%= new Date(inflow.donationdate).toISOString().slice(0, 10) %>
                        <% } else { %>
                            Invalid date
                        <% } %>
                        </td>
                        <td> <!-- Corrected placement of <td> tag -->
                            <!-- Edit form -->
                            <form action="/donationInflows/edit" method="GET" style="display: inline;">
                                <input type="hidden" name="id" value="<%= inflow.donationinflowid %>">
                                <button type="submit" class="btn btn-primary btn-sm ms-1">Edit</button>
                            </form>
                            
                            <!-- Delete form -->
                            <form action="/delete" method="POST" style="display: inline;">
                                <input type="hidden" name="deleteId" value="<%= inflow.donationinflowid %>">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center">No donation inflows found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer.ejs'); -%>
