<%- include('partials/header.ejs'); -%>
<div class="container mt-5">
    <!-- Search bar -->
    <form action="/donationsearch" method="get" class="mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="search" class="form-control rounded-3" id="searchInput" name="searchTerm" placeholder="Search for a donation outflow">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </div>
    </form>
    <!-- Buttons -->
    <div class="mb-4">
        <button type="button" class="btn btn-secondary me-2" onclick="location.href='/donationOutflows/add'">Add Outflow</button>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Sort By
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/sortDonationOutflows?sortby=recordName">Record Name</a></li>
                <li><a class="dropdown-item" href="/sortDonationOutflows?sortby=category">Category</a></li>
                <li><a class="dropdown-item" href="/sortDonationOutflows?sortby=amount">Amount</a></li>
                <li><a class="dropdown-item" href="/sortDonationOutflows?sortby=donationDate">Donation Date</a></li>
            </ul>
        </div>
    </div>
    <!-- List of donation outflows -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Record Name</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Donation Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% donationOutflow.forEach(donationOutflow => { %>
                <tr>
                    <td><%= donationOutflow.donationoutflowid %></td>
                    <td><%= donationOutflow.recordname %></td>
                    <td><%= donationOutflow.category %></td>
                    <td>$<%= parseFloat(donationOutflow.amount).toFixed(2) %></td>
                    <td><%= new Date(donationOutflow.donationdate).toISOString().slice(0, 10) %></td>
                    <td>
                        <!-- Edit and Delete Forms -->
                        <form action="/donationOutflows/edit" method="GET" style="display: inline;">
                            <input type="hidden" name="id" value="<%= donationOutflow.donationoutflowid %>">
                            <button type="submit" class="btn btn-primary btn-sm ms-1">Edit</button>
                        </form>
                        <form action="/deleteOutflow" method="POST" style="display: inline;">
                            <input type="hidden" name="deleteId" value="<%= donationOutflow.donationoutflowid %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('partials/footer.ejs'); -%>
