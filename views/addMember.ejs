                        <option value="Wyoming">Wyoming</option>
                    </select>
                    </div>

                    <div class="col-md-3">
                    <label for="zip" class="form-label">Zip</label>
                    <input type="text" class="form-control" id="zip" name="zip">
                    </div>
                
                    <div class="col-sm-6">
                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" placeholder="YYYY-MM-DD">
                        <div class="invalid-feedback"></div>
                    </div>
            
                    <div class="col-sm-6">
                        <label for="dateJoined" class="form-label">Date Joined</label>
                        <input type="date" class="form-control" id="dateJoined" name="dateJoined" placeholder="YYYY-MM-DD">
                        <div class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="col-md-4 mt-3">
                    <label for="membershipType" class="form-label required">Role</label>
                    <select class="form-select" id="membershipType" name="membershipType" required>
                        <option value="">Choose...</option>
                        <option value="member">Member</option>
                        <option value="officer">Officer</option>
                        <option value="boardMember">Board Member</option>
                    </select>
                    <div class="invalid-feedback">
                        Please provide a membership type.
                    </div>
                </div>
                <div class="row g-3 mt-1">
                    <div class="col-md-2">
                        <label for="dues_check" class="form-label">Dues Paid</label>
                        <input  id="dues_check" class="form-check" type="checkbox" name="currentdues" />
                    </div>
                    <div class="col-sm-10">
                        <div class="row">
                        <div class="col-sm-5">
                            <label for="duesFor" class="form-label required">Dues For</label>
                            <select class="form-select" name="duesFor" id="duesFor">
                                <option>2024-2025</option>
                                <option>2023-2024</option>
                                <option>2022-2023</option>
                            </select>
                            <div class="invalid-feedback"> Please choose a year for the membership dues. </div>
                        </div>
                        <div class="col-sm-5">
                            <label for="paymentDate" class="form-label required">Payment Date</label>
                            <input type="date" class="form-control" id="paymentDate" name="paymentDate" placeholder="YYYY-MM-DD">
                            <div class="invalid-feedback"> Please enter the date you paid.  </div>
                        </div></div>
                    </div>
                </div>
                <hr class="my-4">
                <button class="w-100 btn btn-primary btn-lg mb-5" type="submit">Add Member</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs'); -%>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const paymentDateInput = document.getElementById('paymentDate');
        const duesForSelect = document.getElementById('duesFor');
        const duesCheckbox = document.getElementById('dues_check');

        function togglePaymentDateRequirement() {
            console.log(duesCheckbox)
            if(duesCheckbox.checked) {
                duesForSelect.required = true;
                paymentDateInput.required = true;
                paymentDateInput.parentElement.parentElement.classList.remove("d-none");
                paymentDateInput.parentElement.parentElement.classList.add("d-flex");

            } else {
                duesForSelect.required = false;
                paymentDateInput.required = false;
                paymentDateInput.parentElement.parentElement.classList.add("d-none");
                paymentDateInput.parentElement.parentElement.classList.remove("d-flex");
            }
        }

        document.getElementById('dues_check').addEventListener('click', function(ev) {
            togglePaymentDateRequirement()
        });
    
        // Call on page load in case the form retains values on reload
        togglePaymentDateRequirement();
    });
    </script>
    