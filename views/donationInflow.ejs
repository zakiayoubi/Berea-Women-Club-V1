            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Sort By
            </button>
            <ul class="dropdown-menu">
                <li><button class="dropdown-item" type="submit" name="sortby" value="category">Category</button></li>
                <li><button class="dropdown-item" type="submit" name="sortby" value="amount">Amount</button></li>
                <li><button class="dropdown-item" type="submit" name="sortby" value="donationDate">Donation Date</button></li>
