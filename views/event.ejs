<%- include('partials/header.ejs'); -%>

<!-- search bar -->
<div class="p-5 pt-0 half-width">
    <form action="/searchEvent" method="get">
        <div class="row g-2 align-items-center">
            <div class="col-md-8">
                <div class="form-floating">
                    <input type="search" class="form-control rounded-3" id="searchInput" name="searchTerm" placeholder="Search for an event">
                    <label for="searchInput">Search for an event</label>
                </div>
            </div>
            <div class="col-md-4">
                <button class="w-100 btn btn-lg rounded-3 btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>


<!-- buttons -->
<div class="mx-5 mb-3">
    <!-- Add event Button -->
    <a href="/addevent" class="btn btn-secondary">Add Event</a>

    <!-- Sort By Button with Dropdown -->
    <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Sort By
        </button>
        <form action="/sortEvent" method="POST" class="dropdown-menu">
            <!-- Dropdown menu items as buttons -->
            <button class="dropdown-item" type="submit" name="sortBy" value="eventDate">Date</button>
            <button class="dropdown-item" type="submit" name="sortBy" value="eventType">Type</button>
            <button class="dropdown-item" type="submit" name="sortBy" value="eventCost">Cost</button>
            <button class="dropdown-item" type="submit" name="sortBy" value="amountRaised">Amount Raised</button>
        </form>
    </div>

    <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            New Events
        </button>
        <form action="/newEvents" method="POST" class="dropdown-menu p-2">
            <!-- Year selection -->
            <label class="dropdown-item-text mt-2">Year:</label>
            <select class="form-select" name="year">
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
            </select>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
        </form>
    </div>
</div>

<!-- list of events -->
<div class="mx-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Event</th>
          <th scope="col">Location</th>
          <th scope="col">Date</th>
          <th scope="col">Cost</th>
          <th scope="col">Amount Raised</th>
          <th scope="col">Type</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
        <% let counter = 1; %>
        <% events.forEach(event => { %>
            <tbody>
                <tr>
                    <th scope="row"><%= counter %></th>
                    <td><a href="/events/<%= event.eventid %>"><%= event.eventname %></a></td>
                    <td><%= event.eventlocation %></td>
                    <td><%= event.eventdate ? new Date(event.eventdate).toLocaleDateString() : "" %></td>
                    <td><%= event.eventcost %></td>
                    <td><%= event.amountraised %></td>
                    <td><%= event.eventtype %></td>
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= event.eventid %>">
                            Delete
                        </button>
                        <!-- Modal per member -->
                        <div class="modal fade" id="deleteModal<%= event.eventid %>" tabindex="-1" aria-labelledby="deleteEvent" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Event</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                Are you sure you want to delete this event?
                                </div>
                                <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <form action="/deleteEvent/<%= event.eventid %>" method="POST">
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                </form>
                                </div>
                            </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
            <% counter++; %>
            <% }) %>
    </table>
</div>
  


<%- include('partials/footer.ejs'); -%>