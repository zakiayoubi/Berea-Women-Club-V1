<%- include('partials/header.ejs'); -%>

<div class="container mt-5"> 
    <!-- search bar -->
    <div class="p-5 pt-0 half-width">
        <form action="/members/searchMembers" method="get">
            <div class="row g-1 align-items-center">
                <div class="col-md-8">
                    <div class="form-floating">
                        <input type="search" class="form-control rounded-3" id="searchInput" name="searchTerm" placeholder="Search for a member">
                        <label for="searchInput">Search for a member</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="w-100 btn btn-lg rounded-3 btn-primary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                        Search
                    </button>
                </div>
            </div>
        </form>
    </div>


    <!-- buttons -->
    <div class="mb-3">
        <!-- Add Member Button -->
        <a href="/members/addmember" class="btn btn-secondary">Add Member</a>

        <!-- Sort By Button with Dropdown -->
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Sort By
            </button>
            <form action="/members/sort" method="POST" class="dropdown-menu">
                <!-- Dropdown menu items as buttons -->
                <button class="dropdown-item" type="submit" name="sortby" value="firstname">First Name</button>
                <button class="dropdown-item" type="submit" name="sortby" value="lastname">Last Name</button>
                <button class="dropdown-item" type="submit" name="sortby" value="datejoined">Date Joined</button>
                <button class="dropdown-item" type="submit" name="sortby" value="membertype">Role</button>
            </form>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Dues
            </button>
            <form action="/members/dues" method="POST" class="dropdown-menu p-2">
                <!-- Status selection -->
                <label class="dropdown-item-text">Status:</label>
                <select class="form-select" name="status">
                    <option value="Paid">Paid</option>
                    <option value="Not Paid">Not Paid</option>
                </select>
                <!-- Year selection -->
                <label class="dropdown-item-text mt-2">Year:</label>
                <select class="form-select yearSelect" name="year"></select>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
            </form>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                New Members
            </button>
            <form action="/members/newMembers" method="POST" class="dropdown-menu p-2">
                <!-- Year selection -->
                <label class="dropdown-item-text mt-2">Year:</label>
                <select class="form-select yearSelect" name="year"></select>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
            </form>
        </div>
    </div>
    <!-- list of members -->
    <table class="table">
        <thead>
            <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Date Joined</th>
            <th scope="col">Role</th>
            <th scope="col">Dues Status</th>
            <th scope="col">Last Year Paid</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
            <% if (members && members.length > 0) { %>
                <tbody>
                    <% let counter = 1; %>
                    <% members.forEach(member => { %>
                        <% console.log(member) %>
                        <tr>
                            <th scope="row"><%= counter %></th>
                            <td nowrap><a href="/members/<%= member.memberid %>"><%= member.firstname %> <%= member.lastname %></a></td>
                            <td><%= member.email %></td>
                            <td nowrap><%= member.phonenumber %></td>
                            <td><%= member.datejoined ? new Date(member.datejoined).toLocaleDateString() : "N/A" %></td>
                            <td><%= member.membertype %></td>
                            <td><%= member.status %></td>
                            <td><%= member.lastpaidyear %></td>
                            <td>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= member.memberid %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                                    </svg>
                                </button>
                                <!-- Modal per member -->
                                <div class="modal fade" id="deleteModal<%= member.memberid %>" tabindex="-1" aria-labelledby="deleteMember" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Member</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                        Are you sure you want to delete this member?
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form action="/deleteMember/<%= member.memberid %>" method="POST">
                                            <button type="submit" class="btn btn-primary">Confirm</button>
                                        </form>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% counter++; %>
                    <% }) %>
                </tbody>
            <% } else { %>
                <tbody>
                    <tr>
                        <td colspan="8">No result found</td>
                    </tr>
                </tbody>
            <% } %>
        </table>
</div>

<script>
    window.onload = function() {
      const selects = document.querySelectorAll('.yearSelect');
      const startYear = 2022;
      const currentYear = new Date().getFullYear();
    
      selects.forEach(select => {
        for (let year = startYear; year <= (currentYear + 1); year++) {
          const option = new Option(year, year);
          select.add(option);
        }
      });
    };
</script>
    



<%- include('partials/footer.ejs'); -%>